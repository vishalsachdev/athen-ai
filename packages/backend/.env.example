# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/athen_ai
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20

# Redis
REDIS_URL=redis://localhost:6379
REDIS_SESSION_TTL=86400

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=30d

# OpenAI (legacy - not used)
OPENAI_API_KEY=sk-your-openai-api-key

# Microsoft Foundry for Claude
ANTHROPIC_FOUNDRY_API_KEY=your-foundry-api-key
ANTHROPIC_FOUNDRY_RESOURCE=vishal-sachdev-claude-resource
ANTHROPIC_MODEL=claude-opus-4-5

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/v1/auth/google/callback

# AWS/GCP (choose one)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=athen-ai-temp-storage
AWS_KMS_KEY_ID=your-kms-key-id

# Email
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@athen-ai.com

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-in-production
